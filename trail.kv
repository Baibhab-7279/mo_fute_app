#:kivy 2.0.0

ScreenManager:
    LoginScreen:
    SecScreen:

<La@Label>:
    #size_hint_x: .3

<Ta@MDTextFieldRound>:
    size_hint: .6,.2
    
    
    
<LoginScreen>:
    name: "login"
    RelativeLayout:
        size_hint: 1, 1
        MDCard:
            id: Login_card
            size_hint: None, None
            size: root.width*(70/100),root.height*(80/100)
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            elevation: 10
            spacing:20
            #padding: 10
            orientation: 'vertical'

            MDLabel:
                id: Welcome_tag
                text: "WELCOME" 
                halign: "center"
                color: 1 , 0 , 0 , 1
                #size_hint_y: .4
                font_size:  self.width*(20/100)
                #size: self.texture_size
                size_hint: 1,.3
                #pos_hint: {"center_x": 0.5}

            MDTextFieldRound:
                id: User_name
                hint_text: "user name"
                icon_left: "account"
                halign: "left"
                size_hint: .7, .075
                pos_hint: {"center_x": 0.5}

            MDTextFieldRound:
                id: Password
                hint_text: "password"
                icon_left: "lock"
                halign: "left"
                size_hint: .7, .075
                pos_hint: {"center_x": 0.5}
                password:True
            
            MDRaisedButton:
                id: Submit_button
                text:"submit"
                md_bg_color: 0,0,1,1
                pos_hint: {"center_x": 0.5}
                size_hint: None, .05
                on_press: root.submit_b1()
                #disabled: 'True'
                #on_release: root.manager.current = "sec"
	
            MDLabel:
                id: Replay
                text: "input your user name and pass word"
                halign: "center"
                font_size:  self.width*(5/100)
                size_hint: 1, .2
                color: (1,0,0,1)
            MDLabel:
                text:""
                size_hint: 1, .35
            
   
